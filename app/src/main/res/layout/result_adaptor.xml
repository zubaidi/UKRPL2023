<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <TextView
            android:id="@+id/jk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin: "/>
        <TextView
            android:id="@+id/tvJenisKelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/jk"
            android:text="Laki-Laki"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvBuka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvJenisKelamin"
            android:text="("
            android:layout_marginLeft="8dp"
            android:layout_marginRight="2dp"/>
        <TextView
            android:id="@+id/tvUsia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="38"
            android:layout_toRightOf="@id/tvBuka"/>
        <TextView
            android:id="@+id/tvTahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvUsia"
            android:text="Tahun"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>
        <TextView
            android:id="@+id/tvTutup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvTahun"
            android:text=")"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>
        <TextView
            android:id="@+id/tvTinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvJenisKelamin"
            android:text="Tinggi Badan: "/>
        <TextView
            android:id="@+id/tvTinggiBadan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUsia"
            android:layout_toRightOf="@id/tvTinggi"
            android:text="171"
            android:layout_marginRight="2dp"/>
        <TextView
            android:id="@+id/tvCm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvJenisKelamin"
            android:layout_toRightOf="@id/tvTinggiBadan"
            android:text="cm"/>
        <TextView
            android:id="@+id/tvBerat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTinggiBadan"
            android:text="Berat Badan: "/>
        <TextView
            android:id="@+id/tvBeratBadan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTinggiBadan"
            android:layout_toRightOf="@id/tvBerat"
            android:text="80"
            android:layout_marginRight="2dp"/>
        <TextView
            android:id="@+id/tvKg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTinggiBadan"
            android:layout_toRightOf="@id/tvBeratBadan"
            android:text="Kg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvKetKalo"
            android:layout_below="@id/tvBeratBadan"
            android:text="Nilai kalori yang kamu butuhkan: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNilaiKalo"
            android:layout_below="@id/tvBeratBadan"
            android:layout_toRightOf="@id/tvKetKalo"
            android:text="2500.00"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>